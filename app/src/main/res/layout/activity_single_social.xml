<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/appBackground"
    tools:context="com.example.android.socialapp.SingleSocialActivity">

    <!-- <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/singleImageView"/> -->

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/singleImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:placeholderImage="@drawable/placeholder"
        app:failureImage="@drawable/error_image"
        app:retryImage="@drawable/error_image"
        app:actualImageScaleType="fitCenter"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="post title"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:id="@+id/singleTitle"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="post description"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/singleDesc"/>

    <Button
        android:id="@+id/singleDeleteButton"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="deleteButtonClicked"
        android:text="delete post"
        android:textAllCaps="false"/>

</LinearLayout>
